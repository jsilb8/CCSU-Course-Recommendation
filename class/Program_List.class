<?php

class Program_List {

    public $level;
    public $program_list;

    // Constructor
    public function __construct($level = "Undergraduate") {
        $list = DB::query_array_full("SELECT * FROM `program` WHERE level='" . $level . "'");
        
        $this->level = $level;
        
        foreach($list as $program)
            $this->program_list[$program['db_id']] = $program;
    
    }
    
    public static function minor_required(){
        return DB::query_array_col("SELECT programID FROM `program` WHERE minor='1'","programID");   
    }
    
    public static function undergraduate(){
        return DB::query_array_col("SELECT programID FROM `program` WHERE level='Undergraduate'","programID");   
    }
    
    public static function minor(){
        return DB::query_array_col("SELECT programID FROM `program` WHERE level='Minor'","programID");   
    }
    
    
    
    
}